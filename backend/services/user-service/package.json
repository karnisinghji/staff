{
  "name": "user-service",
  "version": "1.0.0",
  "description": "User service with hexagonal refactor",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "dev": "nodemon --exec ts-node --transpileOnly -P tsconfig.json src/index.ts",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings=0 || echo 'ESLint not configured yet'",
    "coverage:check": "jest --coverage --coverageThreshold '{\"global\":{\"branches\":70,\"functions\":70,\"lines\":70,\"statements\":70}}'",
    "openapi:validate": "node scripts/validate-openapi.js || echo 'OpenAPI validation script pending'",
    "ci:verify": "npm run typecheck && npm run lint && npm run test:ci && npm run coverage:check && npm run openapi:validate"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.19",
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "pg-mem": "^3.0.5"
  }
}
