{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "types": [
            "node",
            "jest"
        ],
        "composite": true
    },
    "references": [
        {
            "path": "../shared"
        }
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/__tests__",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}