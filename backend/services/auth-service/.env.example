# Auth Service Environment Variables

# Database
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# JWT Configuration
JWT_SECRET=your-jwt-secret-256-bit-minimum
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# CORS
CORS_ORIGINS=http://localhost:5173,https://comeondost.web.app
ALLOWED_ORIGINS=http://localhost:5173,https://comeondost.web.app

# Session (for OAuth)
SESSION_SECRET=your-session-secret-change-in-production

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Google OAuth (REQUIRED for OAuth to work)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3001/api/auth/facebook/callback

# Twitter OAuth (Optional)
TWITTER_CONSUMER_KEY=your-twitter-consumer-key
TWITTER_CONSUMER_SECRET=your-twitter-consumer-secret
TWITTER_CALLBACK_URL=http://localhost:3001/api/auth/twitter/callback

# Email Service (for password reset)
GMAIL_CLIENT_ID=your-gmail-oauth-client-id
GMAIL_CLIENT_SECRET=your-gmail-oauth-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token
GMAIL_USER=your-email@gmail.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
