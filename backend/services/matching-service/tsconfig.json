{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleDetection": "auto",
        "composite": true
    },
    "references": [
        {
            "path": "../shared"
        }
    ],
    "include": [
        "src/**/*",
        "src/tests/**/*",
        "src/express.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}