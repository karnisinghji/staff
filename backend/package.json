{
  "name": "backend-root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "scripts": {
    "dev": "node ./scripts/dev-all.mjs",
    "start": "node ./scripts/start-all.mjs",
    "build": "npm run build:all",
    "build:all": "tsc -b --pretty false",
    "clean:all": "tsc -b --clean",
    "typecheck": "tsc -b --pretty false --noEmit",
    "verify:structure": "node scripts/verify-structure.mjs",
    "report:deps": "npm ls --all || true",
    "bootstrap": "npm install && npm run build:all",
    "test": "jest --runInBand --detectOpenHandles --passWithNoTests"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "axios": "^1.6.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  }
}
