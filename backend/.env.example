NODE_ENV=development
# Each service uses its own port; override as needed
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
MATCHING_SERVICE_PORT=3003
COMMUNICATION_SERVICE_PORT=3004
NOTIFICATION_SERVICE_PORT=3005

# Database / persistence (example)
DATABASE_URL=postgres://user:password@host:5432/appdb

# Auth / security
JWT_SECRET=replace_me_with_strong_secret
TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Logging
LOG_LEVEL=info

# Metrics
METRICS_PORT=9464

# CORS (comma separated origins)
CORS_ORIGINS=http://localhost:5173

# Misc
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_MAX=10