# Database Configuration

# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=contractor_worker_platform
DB_USER=postgres
DB_PASSWORD=PostgresNewMasterPassword!

# Redis connection
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
